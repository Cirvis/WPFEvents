<Window
    x:Class="WPFEvents.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFEvents"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="393"
    Height="443"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="buttonSendData"
            Width="75"
            Margin="10,114,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ButtonSendData_Click"
            Content="Send Data" />
        <TextBox
            x:Name="inputTextFileContent"
            Width="194"
            Height="58"
            Margin="10,13,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            GotFocus="InputTextFileContent_GotFocus"
            LostFocus="InputTextFileContent_LostFocus"
            Text="Input your data"
            TextWrapping="Wrap" />
        <Label
            x:Name="labelDone"
            Margin="10,139,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="" />
        <ComboBox
            x:Name="comboBox"
            Width="133"
            Margin="216,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="ComboBox_SelectionChanged" />
        <TextBlock
            x:Name="textBlockOutput"
            Width="133"
            Height="70"
            Margin="216,116,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Label
            x:Name="labelOutput"
            Width="57"
            Margin="216,86,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Output:"
            RenderTransformOrigin="-0.263,0.269" />
        <Button
            x:Name="buttonConnect"
            Width="75"
            Margin="216,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ButtonConnect_Click"
            Content="Connect" />
        <DataGrid
            x:Name="dataGrid"
            Width="300"
            Height="200"
            Margin="10,202,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns />
        </DataGrid>

    </Grid>

</Window>
